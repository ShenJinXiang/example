<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shenjinxiang.mvn.mapper.xtwh.RyglMapper">

    <!-- 人员动态查询条件 -->
    <sql id="ryxxwhere">
        <where>
            <choose>
                <when test="ssjgid!=null">
                    and ssjgid = #{ssjgid}
                </when>
                <otherwise>
                    and ssjgid = #{currentRyxx_ssjgid}
                </otherwise>
            </choose>
            <if test="rymc!=null and rymc!=''"> and rymc like '${rymc}%' </if>
        </where>
    </sql>

    <!-- 人员信息分页查询 -->
    <select id="Dynasearch_ryxx_count" parameterType="map" resultType="int">
        select count(1) from xtwh_ryxx t
        <include refid="ryxxwhere"/>
    </select>

    <select id="Dynasearch_ryxx_getData" parameterType="map" resultType="map">
        select t.*,
        (select group_concat(c2.jsmc) from yygl_ry_jsxx c1,xtwh_jsxx c2 where c1.jsid=c2.jsid and c1.rydm = t.rydm) as jsxx,
        (select c.jgmc from yygl_jgxx c where c.jgid = t.ssjgid) ssjgmc,
        (select c.jglx from yygl_jgxx c where c.jgid = t.ssjgid) ssjglx
        from xtwh_ryxx t
        <include refid="ryxxwhere"/>
        order by ssjgid asc,rydm asc  limit ${start}, ${limit}
    </select>

    <!-- 人员信息查询 -->
    <select id="ryxx_select" parameterType="string" resultType="bean">
        select t.*,
        (select c.jgmc from yygl_jgxx c where c.jgid = t.ssjgid) as ssjgmc
        from yygl_ryxx t
        where rydm = #{_parameter}
    </select>


</mapper>